# Production Environment Variables for Vishwakarma Mechfab
# Copy this file to .env and update with your production values

# CRITICAL: Generate a new secret key using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secure-secret-key-50-chars-min-change-this-immediately

# Django Settings
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=vishwakarmamechfab.in,www.vishwakarmamechfab.in

# Security Settings (HTTPS)
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SESSION_COOKIE_SECURE=True
DJANGO_CSRF_COOKIE_SECURE=True

# Admin Security (Change admin URL for security)
DJANGO_ADMIN_URL=secure-admin-panel-xyz123/

# Database (SQLite is used - file path is relative to project root)
# DATABASE_PATH=db.sqlite3

# Static and Media Files (adjust paths for your server)
# STATIC_ROOT=/var/www/vishwakarmamechfab/staticfiles
# MEDIA_ROOT=/var/www/vishwakarmamechfab/media

# Email Settings (for contact form notifications - optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password